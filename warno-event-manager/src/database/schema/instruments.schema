CREATE TABLE "public"."instruments" (
    "instrument_id" serial NOT NULL,
    "site_id" INTEGER REFERENCES sites (site_id),
    "name_short" VARCHAR(8),
    "name_long" VARCHAR(128),
    "type" varchar(64),
    "vendor" varchar(64),
    "description" text,
    "frequency_band" VARCHAR(2),
    PRIMARY KEY ("instrument_id")
);
